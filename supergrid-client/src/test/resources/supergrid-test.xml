<?xml version="1.0" encoding="UTF-8"?>
<supergrid xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="supergrid.xsd"
         updateCheck="false" monitoring="autodetect"
         name="supergrid-test">

    <endpoint name="clusterA">
          
      <server host="localhost" port="5000" />
      
      <auth
         user="test"
         password="GnfnDngmF"
         />

    </endpoint>

    <endpoint name="clusterB">
      
      <server host="localhost" port="7000" />
      
      <auth
         user="test"
         password="GnfnDngmF"
         />

    </endpoint>

    <client name="super-app" namespace="test">

      <topology type="single">
         <active endpoint="clusterA" />
      </topology>

      <topology type="failover">
         <active endpoint="clusterA" />
         <standby endpoint="clusterB" />
      </topology>
    
      <topology type="active-active">
         <active endpoint="clusterA" />
         <active endpoint="clusterB" />
      </topology>
    
      <entry
         ttl-seconds="300"
         />
         
      <get-operation
         timeout-millis="100"
         />   

      <set-operation
         timeout-millis="100"
         />       
    
    </client>

    <keyspace name="Account" namespace="test" data-distribution="partitioned" />

    <cache-mapping pattern="*" keyspace="Account">
    
      <entry
         ttl-seconds="300"
         />
         
      <get-operation
         timeout-millis="100"
         />   

      <set-operation
         timeout-millis="100"
         />       
    
    </cache-mapping>
    
    <cache name="TestCache" keyspace="Account">

      <entry
         ttl-seconds="300"
         />
         
      <get-operation
         timeout-millis="100"
         />   

      <set-operation
         timeout-millis="100"
         />   

    </cache>

</supergrid>
